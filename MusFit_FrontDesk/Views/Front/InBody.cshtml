                                                    <label id="ulMuscle" style="position: absolute; top: 8%; left: 30%;">@Model.UpperLeftMuscle<br>不足</label>
                                }
                                else if (Model.UpperLeftMuscleLevel == 1)
                                {
                                    <label id="ulMuscle" style="position: absolute; top: 8%; left: 30%;">@Model.UpperLeftMuscle<br>正常</label>
                                }
                                else
                                {
                                    <label id="ulMuscle" style="position: absolute; top: 8%; left: 30%;">@Model.UpperLeftMuscle<br>高</label>
                                }

                                if (Model.UpperRightMuscleLevel == 0)
                                {
                                                    <label id="urMuscle" style="position: absolute; top: 8%; right: 30%;">@Model.UpperRightMuscle<br>不足</label>
                                }
                                else if (Model.UpperRightMuscleLevel == 1)
                                {
                                                    <label id="urMuscle" style="position: absolute; top: 8%; right: 30%;">@Model.UpperRightMuscle<br>正常</label>
                                }
