                                {
                                    <label id="brMuscle" style="position: absolute; bottom: 2%; right: 30%;">@Model.BottomRightMuscle<br>高</label>
                                }
                            }
                                </div>
                                <div class="col-12 text-center">
                                    <h6><b>部位別脂肪量</b></h6>
                                    <img src="~/image/InBody Man.png" style="height: 40%;width: 50%;">
                            @{
                                if (Model.UpperLeftFatLevel == 0)
                                {
                                                   <label id="ulFat" style="position: absolute; top: 8%; left: 30%;">@Model.UpperLeftFat<br>@Model.UpperLeftFatPercentage %<br>不足</label>
                                }
                                else if (Model.UpperLeftFatLevel == 1)
                                {
                                                   <label id="ulFat" style="position: absolute; top: 8%; left: 30%;">@Model.UpperLeftFat <br>@Model.UpperLeftFatPercentage %<br>正常</label>
                                }
                                else
                                {
                                    <label id="ulFat" style="position: absolute; top: 8%; left: 30%;">@Model.UpperLeftFat <br>@Model.UpperLeftFatPercentage %<br>高</label>
                                }

                                if (Model.UpperRightFatLevel == 0)
                                {
                                                    <label id="urFat" style="position: absolute; top: 8%; right: 30%;">@Model.UpperRightFat<br>@Model.UpperRightFatPercentage %<br>不足</label>
                                }
                                else if (Model.UpperRightFatLevel == 1)
                                {
                                                    <label id="urFat" style="position: absolute; top: 8%; right: 30%;">@Model.UpperRightFat<br>@Model.UpperRightFatPercentage %<br>正常</label>
                                }
                                else
                                {
                                    <label id="urFat" style="position: absolute; top: 8%; right: 30%;">@Model.UpperRightFat<br>@Model.UpperRightFatPercentage %<br>高</label>
                                }

                                if (Model.CenterFatLevel == 0)
                                {
                                                   <label id="cFat" style="position: absolute; top: 30%; right: 45%;">@Model.CenterFat<br>@Model.CenterFatPercentage %<br>不足</label>
                                }
                                else if (Model.CenterFatLevel == 1)
                                {
                                                   <label id="cFat" style="position: absolute; top: 30%; right: 45%;">@Model.CenterFat<br>@Model.CenterFatPercentage %<br>正常</label>
                                }
                                else
                                {
                                                   <label id="cFat" style="position: absolute; top: 30%; right: 45%;">@Model.CenterFat<br>@Model.CenterFatPercentage %<br>高</label>
                                }

                                if (Model.BottomLeftFatLevel == 0)
                                {
                                                    <label id="blFat" style="position: absolute; bottom: 2%; left: 30%;">@Model.BottomLeftFat<br>@Model.BottomLeftFatPercentage %<br>不足</label>
                                }
                                else if (Model.BottomLeftFatLevel == 1)
                                {
                                                    <label id="blFat" style="position: absolute; bottom: 2%; left: 30%;">@Model.BottomLeftFat<br>@Model.BottomLeftFatPercentage %<br>正常</label>
                                }
                                else
                                {
                                    <label id="blFat" style="position: absolute; bottom: 2%; left: 30%;">@Model.BottomLeftFat<br>@Model.BottomLeftFatPercentage %<br>高</label>
                                }

                                if (Model.BottomRightFatLevel == 0)
                                {
                                    <label id="brFat" style="position: absolute; bottom: 2%; right: 30%;">@Model.BottomRightFat<br>@Model.BottomRightFatPercentage %<br>不足</label>

                                }
                                else if (Model.BottomRightFatLevel == 1)
                                {
                                    <label id="brFat" style="position: absolute; bottom: 2%; right: 30%;">@Model.BottomRightFat<br>@Model.BottomRightFatPercentage %<br>不足</label>
                                }
                                else
                                {
                                    <label id="brFat" style="position: absolute; bottom: 2%; right: 30%;">@Model.BottomRightFat<br>@Model.BottomRightFatPercentage %<br>不足</label>
                                }

                            }

                                </div>
                                <div class="col-12">
                                    <h6>阻抗</h6>
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th scope="col">Z</th>
                                                <th scope="col">右上臂</th>
                                                <th scope="col">左上臂</th>
                                                <th scope="col">軀幹</th>
                                                <th scope="col">右腿</th>
                                                <th scope="col">左腿</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <th scope="row">20kHz</th>
                                                <td>@Model.EI20kHzRightArm</td>
                                                <td>@Model.EI20kHzLefttArm</td>
                                                <td>@Model.EI20kHzBody</td>
                                                <td>@Model.EI20kHzRightLeg</td>
                                                <td>@Model.EI20kHzLefttLeg</td>
                                            </tr>
                                            <tr>
                                                <th scope="row">100kHz</th>
                                                <td>@Model.EI100kHzRightArm</td>
                                                <td>@Model.EI100kHzLeftArm</td>
                                                <td>@Model.EI100kHzBody</td>
                                                <td>@Model.EI100kHzRightLeg</td>
                                                <td>@Model.EI100kHzLeftLeg</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                }
            }


        </div>


    </main>

</div>

