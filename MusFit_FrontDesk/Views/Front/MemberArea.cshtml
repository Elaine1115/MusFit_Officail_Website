@model MusFit_FrontDesk.Models.Student
<head>
    <title>會員中心 | MusFit - 享受生活</title>
</head>


<link rel="stylesheet" href="~/css/Member_Area.css" />

<div >
    <form class="change_information container-fluid" method="get" action="@Url.Action("MemberArea","Front")" >
        <div class="row mt-5 justify-content-center">

            <div class="mt-4">
                <button type="button" class="btn btn-lg btnStudent btnChange" readonly>會員中心</button>
                <a href="@Url.Action("SEdit","Front")" class="btn btnChange btn-lg ">個人資料修改</a>
                <a href="@Url.Action("EditPassword","Front")" class="btn btnPasswordEdit btn-lg ">密碼修改</a>
            </div>
        </div>
        <div class="row ">
            <div class="col-3"></div>
            <div class="col-6 ">
                <hr>
                <div>
                    <img class="d-block mx-auto mb-4" src="@string.Format("data:image/png;base64,{0}", Model.SPhoto)" alt="" width="200px" height="200px">
                </div>
                <div class="form-group row justify-content-center">
                    <label class="col-sm-3 col-form-label" asp-for="SName">姓名</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="SName"
                               name="SName" type="text" readonly />
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <label class="col-sm-3 col-form-label" asp-for="SGender">性別</label>
                    @{
                        if (Model.SGender == false)
                        {
                                    <div class="col-sm-8">
                                       <input class="form-control" asp-for="SGender"
                                   name="SGender" type="text" value="女" readonly />
                                    </div>
                        }
                        else
                        {
                                     <div class="col-sm-8">
                                        <input class="form-control" asp-for="SGender"
                                   name="SGender" type="text" value="男" readonly />
                                    </div>
                        }
                    }

                </div>
                <div class="form-group row justify-content-center">
                    <label class="col-sm-3 col-form-label" asp-for="SBirth">生日</label>

                    <div class="col-sm-8">
                        <input class="form-control" asp-for="SBirth"
                               name="SBirth" type="date" readonly />
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <label class="col-sm-3 col-form-label" asp-for="SPhone">手機號碼</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="SPhone"
                               name="SPhone" type="tel" readonly />
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <label class="col-sm-3 col-form-label" asp-for="SMail">電子郵件</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="SMail"
                               name="SMail" type="email" readonly />
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <label class="col-sm-3 col-form-label" asp-for="SAddress">地址</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="SAddress"
                               name="SAddress" type="text" readonly />
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <label class="col-sm-3 col-form-label" asp-for="SContactor">緊急聯絡人</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="SContactor"
                               name="SContactor" type="text" readonly />
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <label class="col-sm-3 col-form-label" asp-for="SContactPhone">緊急聯絡人電話</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="SContactPhone"
                               name="Email" type="tel" readonly />
                    </div>
                </div>


            </div>
        </div>
    </form>
</div>