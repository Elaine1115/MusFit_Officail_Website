@model MusFit_FrontDesk.ViewModels.StudentPasswordViewModel
@{
    var messageOld = (string)ViewData["errorOld"] ?? string.Empty;
    var messageNew = (string)ViewData["errorNew"] ?? string.Empty;
    var messageDouble = (string)ViewData["errorDouble"] ?? string.Empty;
    var message = (string)ViewData["error"] ?? string.Empty;
}
<head>
    <title>密碼修改 | MusFit - 享受生活</title>
</head>


<link rel="stylesheet" href="~/css/Change_Password.css">


<div class="container-fluid">
    <form method="post" action="@Url.Action("EditPassword","Front")">
        <div class="change_password container-fluid">
            <div class="row mt-5 justify-content-center">
                <div class="mt-4">
                    <a href="@Url.Action("MemberArea","Front")" class="btn btnStudent btn-lg ">會員中心</a>
                    <a href="@Url.Action("EditInformation")" class="btn btn-lg btnChange">個人資料修改</a>
                    <button type="button" class="btn btn-lg btnPasswordEdit">密碼修改</button>
                </div>
            </div>
            <div class="row ">
                <div class="col-3"></div>
                <div class="col-6 ">
                    <hr>
                    <div class="form-group row justify-content-center">
                        <label class="col-sm-2 col-form-label" asp-for="OldPassword">舊密碼</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="OldPassword"
                                   name="OldPassword" type="password" />
                            <span class="field-validation-valid text-danger" data-valmsg-for="OldPassword"
                                  data-valmsg-replace="true" asp-validation-for="OldPassword"></span>
                        </div>
                    </div>
                    <div class="form-group row justify-content-center">
                        <label class="col-sm-2 col-form-label" asp-for="NewPassword">新密碼</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="NewPassword"
                                   name="NewPassword" type="password" />
                            <span class="field-validation-valid text-danger" data-valmsg-for="NewPassword"
                                  data-valmsg-replace="true" asp-validation-for="NewPassword"></span>
                        </div>
                    </div>
                    <div class="form-group row justify-content-center">
                        <label class="col-sm-2 col-form-label" asp-for="CheckPassword">確認密碼</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="CheckPassword"
                                   name="CheckPassword" type="password" />
                            <span class="field-validation-valid text-danger" data-valmsg-for="CheckPassword"
                                  data-valmsg-replace="true" asp-validation-for="CheckPassword"></span>
                            @{
                                if (message != "" || messageOld != "" || messageNew != "")
                                {
                                            <p id="error" style="color: red"><b>@ViewData["error"]</b></p>
                                }

                                if (messageOld != "")
                                {
                                            <p id="error" style="color: red"><b>@ViewData["errorOld"]</b></p>
                                }
                                
                                if (messageNew != "")
                                {
                                            <p id="error" style="color: red"><b>@ViewData["errorNew"]</b></p>
                                }
                                
                                if (messageDouble != "")
                                {
                                            <p id="error" style="color: red"><b>@ViewData["errorDouble"]</b></p>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-3 btnEdit">
                <div class="col-7"></div>
                <div class="col">
                    <button type="submit" class="btn btnCheck mb-5" style="width: 100px">儲存</button>
                </div>
            </div>
        </div>
    </form>
</div>

