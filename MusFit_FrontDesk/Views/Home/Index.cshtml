        <script>
          var flag = true;
          $(document).ready(function () {

            var a, b, c;
            a = $(window).height();
            var group = $(".group-pic");
            $(window).scroll(function () {
              b = $(this).scrollTop();
              c = group.offset().top;
              if (a + b > c) {
                if (flag) {
                  myAsyncFunction();
                  flag = false;

                }
              } else {
                flag = true;

              }
            });
          });



          AOS.init();
          function delay(n) {
            return new Promise(function (resolve) {
              setTimeout(resolve, n * 1000);
            });
          }

